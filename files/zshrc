function go() {
    rvm use $2
    cd $1
    export GEM_HOME=$1/gems/1.8.7
    export GEM_PATH=$1/gems/1.8.7/bin
    export PATH=$1/gems/1.8.7/bin:$PATH
}

alias gpes='go /Users/ms333/projects/ats/code/galileo/gpe-server ree'
